function FeatureCard({ icon, title, description, href, color }) {
  const colorClasses = {
    blue: 'from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700',
    green: 'from-green-500 to-green-600 hover:from-green-600 hover:to-green-700',
    purple: 'from-purple-500 to-purple-600 hover:from-purple-600 hover:to-purple-700',
    orange: 'from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700',
  }

  return (
    <Link href={href}>
      <div className={`p-6 rounded-xl bg-gradient-to-br ${colorClasses[color]} transform hover:scale-105 transition-all duration-300 cursor-pointer shadow-lg hover:shadow-2xl group`}>
        <div className="text-white mb-4 group-hover:scale-110 transition-transform duration-300">
          {icon}
        </div>
        <h3 className="text-xl font-semibold text-white mb-3">{title}</h3>
        <p className="text-white/90 text-sm leading-relaxed">{description}</p>
      </div>
    </Link>
  )
}

function FeatureHighlight({ icon, title, description }) {
  return (
    <div className="text-center space-y-3">
      <div className="text-jma-blue mx-auto w-fit p-3 bg-jma-blue/10 rounded-full">
        {icon}
      </div>
      <h3 className="text-lg font-semibold text-white">{title}</h3>
      <p className="text-slate-400 text-sm">{description}</p>
    </div>
  )
}

function WorkflowStep({ number, title, description, role, isLast = false }) {
  return (
    <div className="flex gap-4">
      <div className="flex flex-col items-center">
        <div className="w-10 h-10 bg-gradient-to-r from-jma-blue to-jma-purple rounded-full flex items-center justify-center text-white font-bold text-lg">
          {number}
        </div>
        {!isLast && <div className="w-0.5 h-16 bg-gradient-to-b from-jma-blue to-jma-purple mt-2"></div>}
      </div>
      <div className="flex-1 pb-8">
        <h3 className="text-xl font-semibold text-white mb-2">{title}</h3>
        <p className="text-slate-300 mb-3">{description}</p>
        <span className="text-sm text-jma-blue font-medium bg-jma-blue/10 px-3 py-1 rounded-full">
          {role}
        </span>
      </div>
    </div>
  )
}

function StatCard({ number, label, subtext }) {
  return (
    <div className="text-center p-6 bg-slate-800/50 rounded-xl border border-slate-700 backdrop-blur-sm">
      <div className="text-3xl font-bold text-jma-blue mb-2">{number}</div>
      <div className="text-lg font-semibold text-white mb-1">{label}</div>
      <div className="text-sm text-slate-400">{subtext}</div>
    </div>
  )
}
